<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define Color Constants -->
    <color name="csh_white">#eff1df</color>
    <color name="csh_black">#464646</color>
    <color name="pdp_purple">#A3265D</color>
    <color name="pdp_purple_light">#BD2873</color>
    <color name="pdp_pink">#F23A71</color>

    <!-- This auto-magically overrides the look of the share button -->
    <style name="Widget.Sherlock.ListPopupWindow" parent="android:Widget">
        <item name="android:popupBackground">@color/pdp_purple_light</item>
    </style>

    <!-- Colors actually based on a PDP-11
        Used a reference photo to get the correct color values -->
    <!-- Base CSH theme. -->
    <style name="CSHTheme" parent="@style/Theme.AppCompat">
        <!-- CSH Bar -->
        <item name="android:actionBarStyle">@style/CSHBar</item>
        <item name="listPopupWindowStyle">@style/Widget.Sherlock.ListPopupWindow</item>
        <item name="android:actionDropDownStyle">@style/CSHShare</item>
        <item name="android:textColor">@color/csh_white</item>
        <item name="android:popupMenuStyle">@style/CSHPref</item>
        <!--<item name="android:buttonStyle">@style/CSHBtn</item> -->
    </style>

    <!-- ActionBar Themed like CSH. -->
    <style name="CSHBar" parent="@style/Widget.AppCompat.ActionBar">
            <item name="android:background">@color/pdp_purple</item>
            <item name="android:textColor">@color/csh_black</item>
    </style>

    <style name="CSHPref" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/pdp_purple_light</item>
        <item name="android:textColor">@color/csh_white</item>
    </style>

    <style name="CSHShare" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/pdp_purple_light</item>
        <item name="android:textColor">@color/csh_white</item>
        <item name="android:itemBackground">@color/pdp_purple_light</item>
        <item name="android:actionBarItemBackground">@color/pdp_purple_light</item>
    </style>

    <!-- Buttons Themed like CSH. Stopped using this due to lots of purple-ness
    <style name="CSHBtn" parent="android:Theme.Light">
        <item name="android:background">#A3265D</item>
    </style> -->

    <!-- Custom Style for alert layouts -->
    <style name="CSHDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:textColor">@color/pdp_purple</item>
    </style>

</resources>
